{
  "name": "deluge-mcp",
  "version": "0.1.1-beta.0",
  "description": "Strict, beginner-focused Deluge syntax MCP server",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "dev": "npm run build && node dist/src/index.js",
    "ingest": "npm run build && node dist/src/ingestion/cli.js",
    "ingest:oneclick": "bash scripts/ingest-oneclick.sh",
    "kb:deluge": "node scripts/build-deluge-kb.mjs",
    "kb:deluge:refresh": "node scripts/refresh-deluge-kb.mjs",
    "kb:deluge:refresh:allow-tier-a": "node scripts/refresh-deluge-kb.mjs data/processed/snippets.json data/processed/snippets.json data/reports/deluge-kb-diff-report.json data/reports/deluge-kb-diff-report.md --allow-tier-a-changes",
    "kb:deluge:diff": "node scripts/diff-deluge-kb.mjs",
    "kb:zoho-crm-js-sdk": "node scripts/build-zoho-crm-js-sdk-kb.mjs",
    "kb:zoho-crm-js-sdk:refresh": "node scripts/refresh-zoho-crm-js-sdk-kb.mjs",
    "kb:zoho-crm-js-sdk:refresh:allow-tier-a": "node scripts/refresh-zoho-crm-js-sdk-kb.mjs data/raw/zoho-crm-js-sdk-context7.md data/processed/zoho-crm-js-sdk-snippets.json data/reports/zoho-crm-js-sdk-diff-report.json data/reports/zoho-crm-js-sdk-diff-report.md --allow-tier-a-changes",
    "kb:zoho-crm-js-sdk:diff": "node scripts/diff-zoho-crm-js-sdk-kb.mjs",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "smoke": "npm run build && node scripts/smoke-inmemory.mjs",
    "smoke:stdio": "npm run build && node scripts/smoke-stdio.mjs",
    "smoke:matrix": "npm run build && node scripts/smoke-matrix.mjs",
    "smoke:retrieval": "npm run build && node scripts/smoke-matrix.mjs --scenario scripts/scenarios/retrieval-quality.json",
    "smoke:zoho-retrieval": "npm run build && node scripts/smoke-matrix.mjs --scenario scripts/scenarios/zoho-retrieval-quality.json",
    "smoke:matrix:stdio": "npm run build && node scripts/smoke-matrix.mjs --transport stdio",
    "diagnose:stdio": "npm run build && node scripts/diagnose-stdio.mjs",
    "test:local": "npm run smoke:stdio",
    "test:mcp": "npm run smoke && npm run smoke:matrix",
    "test": "npm run build && node --test dist/test/*.test.js",
    "verify": "npm run test && npm run smoke && npm run smoke:matrix",
    "verify:full": "npm run verify && npm run smoke:stdio && npm run smoke:matrix:stdio",
    "release": "node scripts/release.mjs",
    "release:patch": "node scripts/release.mjs --type patch",
    "release:minor": "node scripts/release.mjs --type minor",
    "release:major": "node scripts/release.mjs --type major",
    "release:alpha": "node scripts/release.mjs --type prerelease --preid alpha",
    "release:beta": "node scripts/release.mjs --type prerelease --preid beta",
    "release:rc": "node scripts/release.mjs --type prerelease --preid rc",
    "labels:sync": "node scripts/sync-labels.mjs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/node": "^25.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx}": [
      "biome check --write"
    ]
  }
}
